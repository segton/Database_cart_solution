<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.realestate.fragments.HomeFragment"
        android:label="@string/home_lbl"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_add"
        android:name="com.example.realestate.fragments.AddFragment"
        android:label="@string/add_lbl"
        tools:layout="@layout/fragment_add" />

    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.example.realestate.fragments.CartFragment"
        android:label="@string/shop_lbl"
        tools:layout="@layout/fragment_cart" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.realestate.fragments.ProfileFragment"
        android:label="@string/profile_lbl"
        tools:layout="@layout/fragment_profile" />
</navigation>