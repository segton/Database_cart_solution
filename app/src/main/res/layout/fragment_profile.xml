<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/account_circle_24px"
            android:contentDescription="Profile Picture"
            android:padding="4dp"
             />

        <!-- User Name -->
        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Username"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- User Email -->
        <TextView
            android:id="@+id/profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="example@gmail.com"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Options List -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <!-- Account -->
            <LinearLayout
                android:id="@+id/account_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/account_circle_24px"
                    app:tint="@color/color_green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Account"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <!-- Payments -->
            <LinearLayout
                android:id="@+id/payments_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/payments_24px"
                    app:tint="@color/color_green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Payments"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <!-- Notifications -->
            <LinearLayout
                android:id="@+id/notifications_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/notifications_24px"
                    app:tint="@color/color_green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Notifications"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <!-- FAQ -->
            <LinearLayout
                android:id="@+id/faq_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/quiz"
                    app:tint="@color/color_green"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="FAQ"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <!-- Privacy & Security -->
            <LinearLayout
                android:id="@+id/privacy_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/lock_24px"
                    app:tint="@color/color_green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Privacy &amp; Security"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <!-- Settings -->
            <LinearLayout
                android:id="@+id/settings_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/settings_24px"
                    app:tint="@color/color_green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Settings"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <!-- Sign Out -->
            <LinearLayout
                android:id="@+id/signout_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/logout_24px"
                    app:tint="@color/color_green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Sign Out"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>

        <!-- Footer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Â© CartCompare@2024. All rights reserved."
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>
</ScrollView>
